<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap to preview • Long-press to select • Batch delete supported"
        android:textSize="14sp"
        android:lineSpacingExtra="2dp"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No logs yet."
        android:textSize="14sp"
        android:lineSpacingExtra="2dp"
        android:visibility="gone"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <ListView
        android:id="@+id/list_logs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="multipleChoiceModal"
        android:listSelector="?android:attr/activatedBackgroundIndicator"
        android:divider="?android:attr/listDivider"
        android:dividerHeight="1dp"
        android:scrollbarStyle="outsideInset"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:clipToPadding="false" />
</LinearLayout>
